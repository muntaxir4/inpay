generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  password    String
  firstName   String
  lastName    String
  loginType   LoginType?    
  isMerchant  Boolean      @default(false)
  userAccount UserAccount?

  @@unique([firstName, lastName])
}

model UserAccount {
  id        Int  @id
  balance   Int  @default(0)
  balanceM  Int  @default(0)
  lastSeen  DateTime @default("1970-01-01T00:00:00Z")
  user      User @relation(fields: [id], references: [id])
}

model Transactions {
  id     String   @id @default(uuid())
  amount Int
  type   TxType
  from   Int
  to     Int?
  date   DateTime @default(now())
  status TxStatus @default(PENDING)
}

model UserInteractions {
  id          Int     @id @default(autoincrement())
  userId_1    Int
  userId_2    Int
  updatedAt   DateTime @default(now())

  @@unique([userId_1, userId_2])
}

model UserMessages {
  id        Int     @id @default(autoincrement())
  from      Int
  to        Int
  message   String
  isPayment Boolean?
  createdAt DateTime @default(now())
}

model BankUser {
  id      Int    @id @default(autoincrement())
  email   String @unique
  balance Int    @default(0)
}

model UserOTP {
  id     Int     @id @default(autoincrement())
  email  String
  otp    String
  bank   BankType
}

model MerchantTransactions {
  id          Int      @id @default(autoincrement())
  merchantId  Int      @default(0)
  amount      Int
  countryCode String
  date        DateTime @default(now())
}

enum LoginType {
  GOOGLE
}

enum TxType {
  DEPOSIT
  WITHDRAW
  TRANSFER
  SPENT
}

enum TxStatus {
  PENDING
  SUCCESS
  FAILED
}

enum BankType {
  INPAY
  HDFC
}
