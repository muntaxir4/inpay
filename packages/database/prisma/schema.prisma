generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Transactions{
  id  String @id @default(uuid())
  amount Int
  type  TxType
  from Int
  to Int?
  date DateTime @default(now())
  status TxStatus
}

enum TxType {
  DEPOSIT
  WITHDRAW
  TRANSFER
}

enum TxStatus {
  PENDING
  SUCCESS
  FAILED
}