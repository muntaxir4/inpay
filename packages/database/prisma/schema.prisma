generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  password    String
  firstName   String
  lastName    String
  userAccount UserAccount?
}

model UserAccount {
  id      Int  @id
  balance Int  @default(0)
  user    User @relation(fields: [id], references: [id])
}

model Transactions {
  id     String   @id @default(uuid())
  amount Int
  type   TxType
  from   Int
  to     Int?
  date   DateTime @default(now())
  status TxStatus @default(PENDING)
}

model BankUser {
  id      Int    @id @default(autoincrement())
  email   String @unique
  balance Int    @default(0)
}

model UserOTP {
  id     Int     @id @default(autoincrement())
  email  String
  otp    String
  bank   BankType
}

enum TxType {
  DEPOSIT
  WITHDRAW
  TRANSFER
}

enum TxStatus {
  PENDING
  SUCCESS
  FAILED
}

enum BankType {
  INPAY
  HDFC
}
